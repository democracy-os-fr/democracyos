#whitelists-wrapper
  .whitelists-admin
    .row.well.well-lg
      .col-xs-12.col-md-2
        a.btn.btn-success.btn-block.new(href=urlBuilder.for('admin.users.create', {forum: forum.name}))
          span.glyphicon.glyphicon-plus
          = ' ' + t('admin-whitelists.list.add-whitelist')
      .col-xs-12.col-md-7.col-md-offset-3
        .input-group.input-group-md
          span.input-group-addon
            i.glyphicon.glyphicon-search
          input.form-control.search(type='text', placeholder=t('admin-whitelists.list.search.placeholder'), autofocus)
      .col-md-3
    .row
      .list.list-group
        - each whitelist in whitelists
          a.list-group-item(data-id=whitelist.id, href=urlBuilder.for('admin.users.id', {forum: forum.name, id: whitelist.id}))
            - if (forum.privileges.canEdit)
              button.btn.btn-link.delete-whitelist.pull-right(type='button',data-toggle='modal')
                i.fa.fa-lg.fa-trash.text-danger
            span.whitelist-title=whitelist.value
            span.whitelist-id.hidden=whitelist.id
