.topic-card
  display block
  margin 15px
  width 260px
  box-shadow 0 1px 3px rgba(0,0,0,.12), 0 1px 2px rgba(0,0,0,.24)
  overflow hidden
  color inherit
  cursor pointer
  transition all .3s unquote('cubic-bezier(.25,.8,.25,1)')
  background-color #fff
  position relative

  &:hover
    box-shadow 0 10px 20px rgba(0,0,0,.19), 0 6px 6px rgba(0,0,0,.23)

  .topic-cover
    position relative
    width 100%
    background-size cover

    &:after
      content ''
      display block
      padding-top 60%

  h3
    font-weight 100
    margin 10px 10px 40px
    min-height 102px

  .participants
    position absolute
    bottom 0
    // background-color #333
    // color #e9e9e9
    width 100%
    margin 5px auto
    text-align center
    font-weight bold

    .participants-item
      display: inline-block
      font-weight: bold
      margin-right: 1em
      &:last-child
        margin-right 0

      .fa
        margin-right: 2px
        font-size 14px
      .icon-ratings
        font-weight 300
        font-size 11px
        font-style: normal
        .fa
          font-size 15px
        .fa-thumbs-up
          vertical-align: super
          position: relative
          left: 2px
        .fa-thumbs-down
          vertical-align: sub
          position: relative
          left: 2px
