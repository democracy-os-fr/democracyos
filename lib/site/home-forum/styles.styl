#forum-home
  flex 1
  padding-bottom 60px

  .cover
    padding 30px 0 40px
    width 100%
    color #fff
    text-align center
    background-size cover
    background-color #f9f9f9
    background-position center center

  .no-img
    color #444

  .cover-content
    margin 0 auto
    padding 0 10px
    max-width 790px

    h1
      margin-bottom .2em
      .admin
        display inline-block
        text-align center
        background-color #d9534f
        color #f9f9f9
        font-size 18px
        vertical-align middle
        margin-left 8px
        height 32px
        width 32px
        border-radius 16px
        padding-top 7px
        i.fa, span.icon
          vertical-align middle

  .topics-container
    display flex
    flex-wrap wrap
    justify-content center

  .no-topics
    text-align center
    p
      color #888

  @import './topic-card/styles'
  @import './featured/styles'
